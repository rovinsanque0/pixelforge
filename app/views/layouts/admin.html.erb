<!DOCTYPE html>
<html>
<head>
  <title>Admin Panel</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        rel="stylesheet">

  <!-- Add this missing line -->
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>

  <!-- And this, which you also missed -->
  <%= javascript_importmap_tags %>
</head>


<body class="bg-light">

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">

      <a class="navbar-brand" href="<%= admin_root_path %>">Admin Panel</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#adminNav">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="adminNav">

        <ul class="navbar-nav me-auto">
          <li class="nav-item"><%= link_to "Dashboard", admin_root_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Products", admin_products_path, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to "Categories", admin_categories_path, class: "nav-link" %></li>
        </ul>

        <ul class="navbar-nav ms-auto">
          
          
          <li class="nav-item">
            <%= link_to "Back to Store", root_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= button_to "Logout", destroy_user_session_path,
                  method: :delete,
                  class: "btn btn-outline-light btn-sm ms-2",
                  form: { class: "d-inline" } %>
          </li>
        </ul>

      </div>

    </div>
  </nav>

  <!-- PAGE CONTENT -->
  <div class="container">
    <%= yield %>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
          crossorigin="anonymous"></script>

</body>
</html>
