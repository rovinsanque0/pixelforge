<h1>Manage Categories</h1>

<%= link_to "New Category", new_admin_category_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Actions</th>
  </tr>

  <% @categories.each do |cat| %>
    <tr>
      <td><%= cat.name %></td>
      <td>
        <%= link_to "Edit", edit_admin_category_path(cat) %> |
        <%= link_to "Delete", admin_category_path(cat),
                    data: { turbo_method: :delete, turbo_confirm: "Delete category?" } %>
      </td>
    </tr>
  <% end %>
</table>
