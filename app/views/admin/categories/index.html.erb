<div class="container">
  <h1 class="mb-4 fw-bold">Categories</h1>

  <%= link_to "New Category", new_admin_category_path, class: "btn btn-primary mb-3" %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th class="text-end">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |cat| %>
        <tr>
          <td><%= cat.name %></td>
          <td class="text-end">
            <%= link_to "Edit", edit_admin_category_path(cat), class: "btn btn-sm btn-warning" %>
            <%= button_to "Delete", admin_category_path(cat),
                          method: :delete,
                          class: "btn btn-sm btn-danger",
                          data: { confirm: "Delete this category?" } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
