<div class="container mt-4">
  <h1 class="fw-bold mb-4">My Orders</h1>

  <% if @orders.empty? %>
    <div class="alert alert-info">
      You have no past orders yet.
    </div>
  <% else %>

    <table class="table table-bordered table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Order #</th>
          <th>Date</th>
          <th>Status</th>
          <th>Total</th>
          <th>Details</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.order(created_at: :desc).each do |order| %>
          <tr>
            <!-- ORDER ID -->
            <td><strong><%= order.id %></strong></td>

            <!-- DATE -->
            <td><%= order.created_at.strftime("%B %d, %Y") %></td>

            <!-- STATUS BADGE -->
            <td>
              <% badge_class =
                   case order.status
                   when "paid"     then "bg-success"
                   when "shipped"  then "bg-primary"
                   when "new"      then "bg-secondary"
                   else "bg-warning text-dark"
                   end %>

              <span class="badge <%= badge_class %>">
                <%= order.status.capitalize %>
              </span>
            </td>

            <!-- TOTAL -->
            <td><strong><%= number_to_currency(order.total) %></strong></td>

            <!-- RECEIPT LINK -->
            <td>
              <%= link_to "View Receipt",
                  order_path(order),
                  class: "btn btn-sm btn-outline-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

  <% end %>
</div>
