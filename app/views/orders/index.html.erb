<div class="container mt-4">
  <h1 class="fw-bold mb-4">My Orders</h1>

  <% if @orders.empty? %>
    <div class="alert alert-info">
      You have no past orders yet.
    </div>
  <% else %>
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th>Order #</th>
          <th>Date</th>
          <th>Status</th>
          <th>Total</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.order(created_at: :desc).each do |order| %>
          <tr>
            <td><strong><%= order.id %></strong></td>

            <td><%= order.created_at.strftime("%B %d, %Y") %></td>

            <td>
              <span class="badge 
                <%= case order.status
                    when "new"     then "bg-secondary"
                    when "paid"    then "bg-success"
                    when "shipped" then "bg-primary"
                    else "bg-dark"
                    end %>">
                <%= order.status.capitalize %>
              </span>
            </td>

            <td><strong><%= number_to_currency(order.total) %></strong></td>

            <td>
              <%= link_to "View Receipt",
                  order_path(order),
                  class: "btn btn-sm btn-outline-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
